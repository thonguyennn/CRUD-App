
    <!-- header -->
    <%- include('include/header') %>
    <!-- End header -->

    <div class="mt-4">
        <div class="row">
            <%  for(var i = 0; i < courses.length ; i++){ %>
            <div class="col-sm-6 col-lg-4 mt-3">
                <div class="card">
                    <a href="/courses/<%= courses[i].slug %>">
                        <img class="card-img-top" src="<%= courses[i].image %>" alt="<%= courses[i].name %>">
                    </a>
                    <div class="card-body">
                        <a href="/courses/<%= courses[i].slug %>">
                            <h5 class="card-title"><%= courses[i].name %></h5>
                        </a>
                        <p class="card-text"><%= courses[i].description %></p>
                        <a href="#" class="btn btn-primary">Buy Course</a>
                    </div>
                  </div>
            </div>
            <% } %>
        </div>
    </div>


    <!-- header -->
    <%- include('include/footer') %>
    <!-- End header -->
