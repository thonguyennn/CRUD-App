<!-- header -->
<%- include('include/header') %>
<!-- End header -->

<div class="mt-4 ml-4">
    <h3> Cập nhật khóa học </h3>
        <form method="POST" action="/courses/<%= course._id %>?_method=PUT">
            <div class="form-group">
                <label for="name">Tên khóa học</label>
                <input type="text" name="name" class="form-control" value="<%= course.name %>" id="name" >
            </div>
            <div class="form-group">
                <label for="description">Mô tả khóa học</label>
                <input type="text" name="description" class="form-control" value="<%= course.description %>" id="description" >
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="text" name="image" class="form-control" value="<%= course.image %>" id="image" >
            </div>
            <div class="form-group">
                <label for="videoId">Video Id</label>
                <input type="text" name="videoId" class="form-control" value="<%= course.videoId %>" id="videoId" >
            </div>
            <div class="form-group">
                <label for="level">Trình độ</label>
                <input type="text" name="level" class="form-control" value="<%= course.level %>" id="level" >
            </div>
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </form>
</div>

    <!-- header -->
    <%- include('include/footer') %>
    <!-- End header -->
