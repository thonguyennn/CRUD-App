<div class="mt-4">
    <h3> Đăng khóa học </h3>
    <!--/me/mystore  -->
        <form method="post" action="/courses/store" class="ml-4">  
            <div class="form-group">
                <label for="name">Tên khóa học</label>
                <input type="text" name="name" class="form-control" id="name" >
            </div>
            <div class="form-group">
                <label for="description">Mô tả khóa học</label>
                <input type="text" name="description" class="form-control" id="description" >
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="text" name="image" class="form-control" id="image" >
            </div>
            <div class="form-group">
                <label for="videoId">Video Id</label>
                <input type="text" name="videoId" class="form-control" id="videoId" >
            </div>
            <div class="form-group">
                <label for="level">Trình độ</label>
                <input type="text" name="level" class="form-control" id="level" >
            </div>
            <button type="submit" class="btn btn-primary">Thêm khóa học</button>
        </form>
</div>

